<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11"
            fx:controller="controller.LoginController">
    <Label alignment="TOP_CENTER" layoutX="25.0" layoutY="14.0" prefHeight="25.0" prefWidth="250.0"
           style="-fx-font-size: 26;" text="Login to Photos" textAlignment="CENTER">
        <font>
            <Font size="20.0"/>
        </font>
    </Label>
    <TextField fx:id="userField" alignment="TOP_CENTER" layoutX="25.0" layoutY="78.0" onAction="#login"
               prefHeight="25.0" prefWidth="250.0" promptText="Enter Username">
        <font>
            <Font size="20.0"/>
        </font>
    </TextField>
    <Button fx:id="loginButton" layoutX="100.0" layoutY="142.0" mnemonicParsing="false" onAction="#login"
            prefHeight="25.0" prefWidth="100.0" text="Login">
        <font>
            <Font size="20.0"/>
        </font>
    </Button>
</AnchorPane>
